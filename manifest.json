{
  "name": "Local Video Control Keys",
  "description": "Provides some youtube-like control hotkeys for file://*.mp4 videos",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_icon": "play-button-arrowhead.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "file:///*"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      }
    }
  }
}
